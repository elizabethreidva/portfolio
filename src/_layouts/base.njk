{% set sitetitle = meta.author + ", " + meta.role %}
{% if pagetitle %}
{% set title = sitetitle + " - " + pagetitle %}
{% else %}
{% set title = sitetitle %}
{% endif %}
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
	<link rel="stylesheet" href="/styles.css">
  </head>
  <body>
	<header>
		<h1>{{ title }}</h1>
	</header>
	<main>
    	{{ content | safe }}
	</main>
	<footer>&copy; 2025 {{ meta.author }}</footer>
  </body>
</html>